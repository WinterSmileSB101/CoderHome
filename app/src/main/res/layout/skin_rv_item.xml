<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_margin="10dp"
              android:layout_marginBottom="0dp"
    android:background="@color/colorSliteGray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:orientation="vertical"
        android:background="@color/colorWrite">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/skin_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/chose_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/sure"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorSliteGray"></LinearLayout>

    <TextView
        android:id="@+id/skin_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:typeface="monospace"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/chose_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:typeface="monospace"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:text="使用中"
        android:textColor="@color/colorSlateGray"/>
    </LinearLayout>

</LinearLayout>
