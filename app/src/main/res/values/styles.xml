<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorDarkRed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--状态栏沉浸-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--白色前景的状态栏样式-->
    <style name="ligthToolBar" parent="AlertDialog.AppCompat.Light">
        <item name="android:textColor">@color/colorWrite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--白色背景，黑色前景的弹出栏-->
    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@android:color/white</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>
    <!--collapasing状态栏的小号白色标题外表-->
    <style name="collpasCustom" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--白天主题-->
    <style name="DayTheme" parent="@style/Theme.AppCompat.NoActionBar">

        <!--菜单中分栏的颜色-->
        <item name="android:actionMenuTextColor">@color/colorSlateGray</item>

        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorDarkRed</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorSliteGray</item>
        <item name="colorControlNormal">#2196F3</item>

        <item name="titleColor">@color/colorBlack</item>
        <item name="contentColor">@color/colorSlateGray</item>

        <item name="myTabTextColor">@color/colorBlack</item>
        <item name="myTabSelecteColor">@color/colorWrite</item>

        <item name="titleStyle">@style/DayTitleStyle</item>
        <item name="contentStyle">@style/DayContentStyle</item>
        <item name="buttonBG">#2196F3</item>
        <item name="buttonTextColor">#ffffff</item>
        <item name="checkTextColor">#2196F3</item>
        <item name="switchTextColor">#2196F3</item>
    </style>
    
    <style name="DayTitleStyle">
        <item name="android:textColor">@color/colorWrite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="DayContentStyle">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <!--夜间主题-->
    <style name="NightTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">#161823</item>
        <item name="colorAccent">#00796B</item>
        <item name="android:textColorPrimary">@color/colorWrite</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="colorControlNormal">#00BCD4</item>

        <item name="titleColor">@color/colorGray</item>
        <item name="contentColor">@color/colorGray</item>

        <item name="myTabTextColor">@color/colorDimGray</item>
        <item name="myTabSelecteColor">@color/colorWrite</item>

        <item name="titleStyle">@style/NightTitleStyle</item>
        <item name="contentStyle">@style/NightContentStyle</item>
        <item name="buttonBG">#00796B</item>
        <item name="buttonTextColor">#9E9E9E</item>
        <item name="checkTextColor">#212121</item>
        <item name="switchTextColor">#212121</item>
    </style>

    <style name="NightTitleStyle">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="NightContentStyle">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:maxLines">10</item>
    </style>

    <!--原谅主题（翡翠绿）-->
    <style name="GreenTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#00cca4</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#00cca4</item>
        <item name="android:textColorPrimary">@color/colorGreen</item>
        <item name="android:windowBackground">@color/colorDarkGreen</item>
        <item name="colorControlNormal">#00BCD4</item>

        <item name="titleColor">@color/colorGray</item>
        <item name="contentColor">@color/colorWrite</item>

        <item name="myTabTextColor">@color/colorSliteGray</item>
        <item name="myTabSelecteColor">@color/colorDarkGreen</item>

        <item name="titleStyle">@style/GreenTitleStyle</item>
        <item name="contentStyle">@style/GreenContentStyle</item>
        <item name="buttonBG">#00796B</item>
        <item name="buttonTextColor">#9E9E9E</item>
        <item name="checkTextColor">#212121</item>
        <item name="switchTextColor">#212121</item>
    </style>

    <style name="GreenTitleStyle">
        <item name="android:textColor">#00cca4</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="GreenContentStyle">
        <item name="android:textColor">#00cca4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:maxLines">10</item>
    </style>


</resources>
